<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/lightseagreen"
        >
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/id_shouye_sp"
            android:layout_margin="7dp"
            />
        <EditText
            android:layout_margin="7dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="输入目的地"
            android:id="@+id/id_shouye_ed"
            android:drawableLeft="@drawable/search"
            android:paddingLeft="7dp"
            android:background="@drawable/shape"
            />
        <ImageView
            android:layout_marginRight="7dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/id_shouye_im"
            android:layout_gravity="center"
            android:src="@drawable/tishi"
            />
    </LinearLayout>
    <andfans.com.mylbs.util.MyRxViewPager
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/id_shouye_vp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <andfans.com.mylbs.util.MyImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/id_shouye_imbt01"
            />
        <andfans.com.mylbs.util.MyImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/id_shouye_imbt02"
            />
        <andfans.com.mylbs.util.MyImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/id_shouye_imbt03"
            />
        <andfans.com.mylbs.util.MyImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/id_shouye_imbt04"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="停车场推荐"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_shouye_rv01"
        android:scrollbars="vertical"
        android:paddingTop="10dp"
        android:padding="10dp"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightseagreen"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/id_login_pic"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/parking"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/id_login_pic"
            android:layout_centerVertical="true"
            android:id="@+id/id_login_tv"
            android:text="易停"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/id_login_back"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="手机号:"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/id_login_tele"
            android:layout_height="match_parent"
            android:hint="请输入注册手机号"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="密码:"
            android:paddingRight="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/id_login_password"
            android:inputType="numberPassword"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:text="登录"
        android:id="@+id/id_login_login"
        android:background="@drawable/shape_login_button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="忘记密码？"
        android:textSize="20sp"
        />

</LinearLayout>